@model IEnumerable<string>

<div class="list-group">
    @Html.ActionLink("Home", "List", "Product", new{}, ViewBag.SelectedCategory == null ? 
                                new { @class = "list-group-item active"} : new { @class = "list-group-item"})   
    @foreach(var link in Model)
    {
        @Html.RouteLink(link, 
        new {
            controller = "Product",
            action = "List",
            category = link,
            page = 1
        },ViewBag.SelectedCategory == link ? new { @class = "list-group-item active" } : new { @class = "list-group-item" });
    }
</div>